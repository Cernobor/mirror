{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "mirror",
            "type": "python",
            "request": "launch",
            "program": "mirror.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "args": [
                "--halo-common", "./assets/halo-a",
                "--halo-special", "./assets/halo-b",
                "--trigger-files", "./special", "./final",
                "--background-stars-no", "100",
                "--common-constellations", "./assets/common_normalized.json",
                "--special-constellations", "./assets/special_normalized.json",
                "--depth", "2000",
                "--video-resolution-scale", "1", "2"
            ]
        }
    ]
}